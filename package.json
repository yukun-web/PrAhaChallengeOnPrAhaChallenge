{
  "name": "ponp-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.25.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@next/env": "^16.1.1",
    "@types/node": "25.0.3",
    "drizzle-kit": "^0.31.8",
    "postgres": "^3.4.8",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.3"
  },
  "engines": {
    "node": "^22"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^22.21.1",
      "onFail": "download"
    }
  }
}