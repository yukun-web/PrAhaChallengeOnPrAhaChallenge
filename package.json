{
  "name": "ponp-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.25.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@next/env": "^15.5.4",
    "@types/node": "24.6.2",
    "drizzle-kit": "^0.31.5",
    "postgres": "^3.4.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8"
  },
  "engines": {
    "node": "^22"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^22",
      "onFail": "download"
    }
  }
}